<!DOCTYPE html>
<html>
<%include header.ejs %>
<head>
  <title></title>
</head>
<body>
  <div id='wrapper'>
    <!-- Sidebar -->
    <div id='sidebar-wrapper'>
      <ul class='sidebar-nav'>
        <li>
          <a href='/studentList'>Student List</a>
        </li>
        <li>
          <a href='/testStat' style='color:#6cbf6c'>Test Statistic</a>
        </li>
      </ul>
    </div><!-- /#sidebar-wrapper -->
    <!-- /#sidebar-wrapper -->
    <div id='page-content-wrapper'>
      <div class='container'>
        <div class='row'>
          <div class='col-lg-10'>
            <a class='btn btn-default' href='#menu-toggle' id='menu-toggle'><i class='fa fa-arrows-h'></i></a>
            <div class='panel panel-default' style='margin-top:50px;'>
              <div class='panel-heading'>
                <div class='panel-title text-center'>
                  <hr>
                  <h3 class='text-center' data-id='<%=nextTestNumber%>' id='testNumber' style='color:grey'>Add Test Score for Test <%=nextTestNumber%></h3>
                </div>
              </div>
              <div class='panel-body'>
                <form id='addScores' name="addScores">
                  <table class='studentTable table table-striped' id='studentList'>
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Score</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%for(var i=0; i < user.length; i++) { %>
                      <tr>
                        <td data-id='<%=user[i]._id %>'><%= user[i].local.firstname +' ' +user[i].local.lastname  %></td><%var total=0; for (var j=0; j < user[i].local.grades.length;j++) {%><%total+=user[i].local.grades[j];%><%} %>
                        <td><input class='newScore form-control' data-id='<%=user[i]._id %>' min="1" name='score' type='number'></td>
                      </tr><%} %>
                    </tbody>
                  </table><button class='btn btn-success pull-right' type='submit'>Submit</button>
                  <div class='form-group'>
                    <div class='col-md-9 col-md-offset-3'>
                      <div id='messagesAddScore'></div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div><!-- /#page-content-wrapper -->
  </div>
  <script src='/js/jquery.min.js'>
  </script>
  <script src='/js/bootstrap.min.js'>
  </script>
  <link href='//cdn.datatables.net/1.10.13/css/jquery.dataTables.css' rel='stylesheet' type='text/css'>
  <script charset='utf8' src='//cdn.datatables.net/1.10.13/js/jquery.dataTables.js' type='text/javascript'>
  </script>
  <script charset='utf8' src='//cdn.datatables.net/1.10.13/js/dataTables.bootstrap.min.js' type='text/javascript'>
  </script>
  <script charset='utf8' src='//cdn.datatables.net/responsive/2.1.1/js/dataTables.responsive.min.js' type='text/javascript'>
  </script>
  <script src='//cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/js/bootstrapValidator.min.js' type='text/javascript'>
  </script>
  <script src='//cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js'>
  </script>
  <script src='/js/addTest.js'>
  </script>
</body>
</html>
