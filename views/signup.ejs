<!DOCTYPE html>
<html>
<head>
  <title>Grade book</title>
  <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
  <link href="//cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css" rel="stylesheet">
  <link href="/custom/simple-sidebar.css" rel="stylesheet">
  <link href="/custom/custom-nav.css" rel="stylesheet">
  <style>
  
  .panel-default>.panel-heading {
    color: white;
    background-color: #5cb85c;
    border-color:  #5cb85c;
}
  </style>
</head>
<body>
  <div class="container">
    <div class="col-sm-6 col-sm-offset-3">
      <center>
        <img src="/img/gradeBookBlackLogo.png">
      </center>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title text-center">
            Signup
          </div>
        </div>
        <div class="panel-body">
          <%if (message.length > 0) { %>
          <div class="alert alert-danger">
            <%= message %>
          </div><%} %><!-- LOGIN FORM -->
          <form id="signup-form" action ="/signup" method="post" name="signup-form">
            <div class="form-group">
              <label>Email/Username</label> <input class="form-control" name="email" required="" type="text">
            </div>
            <div class="form-group">
              <label>First Name</label> <input class="form-control" name="firstname" required="" type="text">
            </div>
            <div class="form-group">
              <label>Last Name</label> <input class="form-control" name="lastname" required="" type="text">
            </div>
            <div class="form-group">
              <label>Password</label> <input class="form-control" name="password" required="" type="password">
            </div>
            <div class="form-group">
              <label>Confirm Password</label> <input class="form-control" name="confirmPassword" required="" type="password">
            </div><!-- #messages is where the messages are placed inside -->
            <div class="form-group">
              <div class="col-md-9 col-md-offset-3">
                <div id="messages"></div>
              </div>
            </div><button class="btn btn-primary pull-right btn" disabled="disabled" type="submit">Signup</button>
          </form>
          <hr>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/jquery.min.js">
  </script> 
  <script src="/js/bootstrap.min.js">
  </script> 
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/js/bootstrapValidator.min.js" type="text/javascript">
  </script> 
  <script src="/js/signup.js">
  </script> 
</body>
</html>